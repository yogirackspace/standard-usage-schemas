<productSchema xmlns="http://docs.rackspace.com/core/usage/schema"
               namespace="http://docs.rackspace.com/event/support/account/sla"
               serviceCode="Support"
               version="1" resourceTypes="ACCOUNT_SUPPORT" 
               type="CREATE UPDATE">
    <description>
       Specifies the events that describe changes in service level for a supported account.
    </description>
    <attribute name="serviceLevel" type="Name" use="required"
               allowedValues="MANAGED INFRASTRUCTURE INTENSIVE"> 
        Specifies the service level for this account.
    </attribute>
    <attribute name="serviceType" type="Name" use="required"
                   allowedValues="SYSOPS DEVOPS LEGACY">
        Specifies the service type for this account.
    </attribute>
</productSchema>
